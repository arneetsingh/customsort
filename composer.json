{
    "name": "arneetsingh/customsort",
    "description": "Gives ability to manually sort items in any model",
    "license": "MIT",
    "authors": [
        {
            "name": "Arneet Singh",
            "email": "arneetsingh@gmail.com",
            "homepage": "https://arneetsingh.com"
        }
    ],
    "homepage": "https://github.com/arneetsingh/customsort",
    "keywords": ["Laravel", "custom sort", "manual sort"],
    "require": {
        "illuminate/support": "~5|~6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "~3|~4",
        "sempro/phpunit-pretty-print": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Arni\\CustomSort\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arni\\CustomSort\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arni\\CustomSort\\CustomSortServiceProvider"
            ]
        }
    }
}
